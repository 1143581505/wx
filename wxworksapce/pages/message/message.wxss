.display{
	width: 90%;
	height: 80%;
	display: flex;
	flex-direction: column;
	overflow: hidden;
	margin: 20rpx 20rpx;
	padding: 0 10rpx;
}
.display .row{
	margin: 30rpx 0;
	padding: 30rpx;
	border-bottom: 1px solid #ccc;
}

.display .title{
	/* font-size: larger; */
	font-weight: bolder;
	color: #000;
	clear: both;
	display: inline-block;
}
.display .time{
	opacity: 0.6;
	font-size: small;
	float: right;
}
.message{
	opacity: 0.8;
	/* padding: 20rpx; */
	width: 90%;
	overflow : hidden;
	text-overflow: ellipsis;
	display: -webkit-box;
	-webkit-line-clamp: 2;
	-webkit-box-orient: vertical;
}