@import '../../style/fontawesome.wxss';
.search {
  border: 1rpx solid #777;
  border-radius: 30rpx;
  height: 60rpx;
  margin: 10rpx 30rpx;
  display: flex;
}

.fa-search {
  display: inline-flex;
  margin: auto 20rpx;
  border-radius: 50%;
  width: 50rpx;
  height: 40rpx;
}

.search .search-input {
  display: inline;
  width: 100%;
  height: 100%;
  margin: auto;
  font-size: 24rpx;
}

.search .reset-button {
  display: inline-flex;
  margin: 0;
  padding: 5rpx;
  width: 50rpx;
  min-height: 50rpx;
  background-color: #fff;
  margin: auto 20rpx;
  /* border-radius: 50%; */
}

.search .reset-button .fa-refresh {
  margin-top:5rpx;
  height: 40rpx;
  width: 40rpx;
}
